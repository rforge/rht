citHeader("To cite package 'rht' in publications use:")

## R >= 2.8.0 passes package metadata to citation().

if(!exists("meta") || is.null(meta)) meta <- packageDescription("rht")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)
citEntry(entry="Manual",
title = "rht: Robust Horvitz-Thompson Estimation",
author = personList(as.person("Beat Hulliger"), as.person("Tobias Schoch")),
year = year,
note = vers,
textVersion =paste("Beat Hulliger and Tobias Schoch (",
year,
"). rht: Robust Horvitz-Thompson Estimation. ",
vers, ".", sep=""))

